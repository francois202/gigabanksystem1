{
  "$schema": "<http://json-schema.org/draft-07/schema#>",
  "title": "User",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "User identifier"
    },
    "name": {
      "type": "string",
      "description": "User login name"
    },
    "password": {
      "type": "string",
      "description": "User password"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "default": "+1234567890"
    }
  },
  "required": ["id", "name", "email"],
  "additionalProperties": false
}